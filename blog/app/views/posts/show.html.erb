<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<table border=1>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
  </tr>
<% @post.comments.each do |comment| %>
  <tr>
    <td>     
      <%= comment.commenter %>
    </td>
    <td>
      <%= comment.body %>
    </td>
  </tr>
<% end %>
</table>

<h2>Add a comment:</h2>
<%= form_for([@post,@post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %>
