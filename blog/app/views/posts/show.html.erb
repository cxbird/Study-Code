<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<table border=1>
  <tr>
    <th>Commenter</th>
    <td>Comment</th>
  </tr>
  <%= render @post.comments %>
</table>

<h2>Add a comment:</h2>
<%= render "comments/form"%>

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %>
